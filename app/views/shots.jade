extends ./layout.jade

block content

	//Most popular shots (must be authenticated)
	div(ng-controller='ShotsCtrl')
		div(class='col-sm-2' ng-repeat='shot in shots' ng-cloak)
			a(ng-click='openModal()' class='thumbnail')
				img(src='{{ shot.images.normal }}' alt='Rolling')
				div(class='caption')
					span(class="glyphicon glyphicon-heart")
					| {{ shot.likes_count || 0 }}
					span(class="glyphicon glyphicon-eye-open")
					| {{ shot.views_count || 0 }}
					span(class="glyphicon glyphicon-comment")
					| {{ shot.comments_count || 0 }}